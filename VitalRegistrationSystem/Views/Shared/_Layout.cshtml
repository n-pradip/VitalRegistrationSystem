<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VitalRegistrationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/vrsUtility.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VitalRegistrationSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-0 pt-2 pb-2 pl-5 p-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">VitalRegistrationSystem</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Blog">Blog</a>                     
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Services
                            </a>
                            <ul class="dropdown-menu ">
                                <li><a class="dropdown-item text-dark" href="/birth/index">Birth Registration</a></li>
                                <li><a class="dropdown-item text-dark" href="/death/index">Death Registration</a></li>
                                <li><a class="dropdown-item text-dark" href="/marrige/index">Marrige Registration</a></li>
                                <li><a class="dropdown-item text-dark" href="/divorce/index">Divorce Registration</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="Downloads">Downloads</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action="ContactUs">ContactUs</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="w-100">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="fdb-block footer-large bg-alert" style="padding-top: 100px">
        <div class="container">
            <div class="row align-items-top text-center">
                <div class="col-12 col-md-4 col-lg-4 text-md-center mt-5 mt-md-0">
                    <h4><strong>About VRS</strong></h4>
                    <p style="text-align: justify;">"Welcome to our Vital Registration System (VRS)! Our user-friendly platform simplifies the process of registering vital events such as births, marriages, and deaths. With secure and efficient data management, we ensure accurate documentation and legal recognition, empowering individuals and communities. Register your vital events today with VRS!"</p>
                </div>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 text-sm-left">
                    <h4><strong>Useful Links</strong></h4>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="">Local Government Contact List</a>
                        <a class="nav-link" href="#">Downloads</a>
                        <a class="nav-link" href="#">Contact Us</a>
                        <a class="nav-link" href="#">Blog</a>
                        <a class="nav-link" href="#">About Us</a>
                    </nav>
                </div>

                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mt-5 mt-sm-0 text-sm-left">
                    <h4><strong>Legal</strong></h4>
                    <nav class="nav flex-column">
                        <a class="nav-link active" href="#">Privacy Policy</a>
                        <a class="nav-link" href="#">Terms</a>
                        <a class="nav-link" href="#">FAQ</a>
                    </nav>
                </div>


                <div class="col-12 col-lg-2 ml-auto text-lg-left mt-4 mt-lg-0">
                    <h4><strong>Follow Us</strong></h4>
                    <p class="lead">
                        <a href="" class="mx-2"><i class="fab fa-twitter" aria-hidden="true"></i></a>
                        <a href="" class="mx-2"><i class="fab fa-facebook" aria-hidden="true"></i></a>
                        <a href="" class="mx-2"><i class="fab fa-instagram" aria-hidden="true"></i></a>
                        <a href="" class="mx-2"><i class="fab fa-pinterest" aria-hidden="true"></i></a>
                        <a href="" class="mx-2"><i class="fab fa-google" aria-hidden="true"></i></a>
                    </p>
                </div>
            </div>

        </div>
    </footer>
            <div class="row mt-5 border-top-dark footer">
                <div class="col text-center">
                    © 2023 VitalRegistrationSystem. All Rights Reserved
                </div>
            </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
