@model VitalRegistrationSystem.Models.DeathModel

<div class="text-banner">
    <h1 class="text-center">Death Registration</h1>
</div>

<form asp-controller="Death" asp-action="CreateDeath" method="post" class="container px-4 py-4">
    <div class="row">
        <div class="form-group my-4 col-6">
            <label for="ApplicantName">Applicant's Name:</label>
            <input type="text" class="form-control"  name="ApplicantName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantCitizenshipNumber">Applicant's Citizenship Number:</label>
            <input type="text" class="form-control"  name="ApplicantCitizenshipNumber" placeholder="Enter here ..." required>
        </div>
        
        <div class="form-group my-4 col-6">
            <label for="DeceasedName">Deceased Name:</label>
            <input type="text" class="form-control"  name="DeceasedName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="Age">Age:</label>
            <input type="number" class="form-control"  name="Age" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="FatherName">Father's Name:</label>
            <input type="text" class="form-control"  name="FatherName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="GrandfatherName">Grandfather's Name:</label>
            <input type="text" class="form-control"  name="GrandfatherName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="Spouse">Spouse:</label>
            <input type="text" class="form-control"  name="Spouse" placeholder="Enter here ...">
        </div>

        <div class="form-group my-4 col-6">
            <label for="CitizenshipNumber">Citizenship Number:</label>
            <input type="text" class="form-control"  name="CitizenshipNumber" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="Address">Address:</label>
            <input type="text" class="form-control" name="Address" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="DateOfBirth">Date of Birth:</label>
            <input type="date" class="form-control"  name="DateOfBirth" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="DeathDate">Date of Death:</label>
            <input type="date" class="form-control"  name="DeathDate">
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
</form>