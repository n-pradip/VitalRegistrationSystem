@model IEnumerable<DeathModel>


<div class="container-fluid">

    <div class="container-fluid pt-3 px-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Death Registration List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Death" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; New Death Registration
                </a>
            </div>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    DeathId
                </th>
                <th>
                    Applicant Name
                </th>
                <th>
                    Deceased Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Father's Name
                </th>
                <th>
                    Grandfather's Name
                </th>
                <th>
                    Spouse's Name
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Citizenship Number
                </th>
                <th>
                    Address
                </th>
                <th>
                    Date Of Birth
                </th>
                <th>
                    DeathDate
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        @obj.DeathId
                    </td>
                    <td>
                        @obj.ApplicantName
                    </td>
                    <td>
                        @obj.ApplicantCitizenshipNumber
                    </td>
                    <td>
                        @obj.DeceasedName
                    </td>
                    <td>
                        @obj.Age
                    </td>
                    <td>
                        @obj.FatherName
                    </td>
                    <td>
                        @obj.GrandfatherName
                    </td>
                    <td>
                        @obj.Spouse
                    </td>
                    <td>
                        @obj.CitizenshipNumber
                    </td>
                    <td>
                        @obj.Address
                    </td>
                    <td>
                        @obj.DateOfBirth
                    </td>
                    <td>
                        @obj.DeathDate
                    </td>
                    <td>
                        @obj.DeathRegistrationDate
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Death" asp-action="Update" asp-route-id="@obj.DeathId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                            <a asp-controller="Death" asp-action="Delete" asp-route-id="@obj.DeathId" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> &nbsp; Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>