@model VitalRegistrationSystem.Models.BirthModel

<div class="text-banner">
    <h1 class="text-center">Delete Birth Registration</h1>
</div>

<form asp-controller="Birth" asp-action="Delete" method="post" class="container px-4 py-4">
    <input type="hidden" asp-for="BirthId" />
    <div class="row">
        <div class="form-group my-4 col-6">
            <label for="ApplicantName">Applicant's Name:</label>
            <input type="text" class="form-control" asp-for="ApplicantName">
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantAddress">Applicant's Address:</label>
            <input type="text" class="form-control" asp-for="ApplicantAddress">
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantCitizenshipNum">Applicant's Citizenship Number:</label>
            <input type="text" class="form-control" asp-for="ApplicantCitizenshipNum">
        </div>

        <div class="form-group my-4 col-6">
            <label for="GrandFathersName">Grandfather's Name:</label>
            <input type="text" class="form-control" asp-for="GrandFathersName">
        </div>

        <div class="form-group my-4 col-6">
            <label for="FathersName">Father's Name:</label>
            <input type="text" class="form-control" asp-for="FathersName">
        </div>

        <div class="form-group my-4 col-6">
            <label for="MothersName">Mother's Name:</label>
            <input type="text" class="form-control" asp-for="MothersName" >
        </div>

        <div class="form-group my-4 col-6">
            <label for="DateOfBirth">Date of Birth:</label>
            <input type="date" class="form-control" asp-for="DateOfBirth" >
        </div>

        <div class="form-group my-4 col-6">
            <label for="ChildName">Child's Name:</label>
            <input type="text" class="form-control" asp-for="ChildName">
        </div>

        <div class="form-group my-4 col-6">
            <label for="ChildAddress">Child's Address:</label>
            <input type="text" class="form-control" asp-for="ChildAddress">
        </div>

        <div class="form-group my-4 col-6">
            <label for="FatherCitizenshipNumber">Father's Citizenship Number:</label>
            <input type="text" class="form-control" asp-for="FatherCitizenshipNumber">
        </div>

        <div class="form-group my-4 col-6">
            <label for="MotherCitizenshipNumber">Mother's Citizenship Number:</label>
            <input type="text" class="form-control" asp-for="MotherCitizenshipNumber">
        </div>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>
