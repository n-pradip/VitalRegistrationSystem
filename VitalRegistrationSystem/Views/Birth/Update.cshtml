@model VitalRegistrationSystem.Models.BirthModel

<div class="text-banner">
    <h1 class="text-center">Update Birth Registration</h1>
</div>

<form asp-controller="Birth" asp-action="UpdateBirth" method="post" enctype="multipart/form-data" class="container px-4 py-4">
    <input asp-for="BirthId" hidden />
    <div class="row">
        <div class="form-group my-4 col-6">
            <label for="ApplicantName">Applicant's Name:</label>
            <input type="text" class="form-control" id="ApplicantName" asp-for="ApplicantName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantAddress">Applicant's Address:</label>
            <input type="text" class="form-control" id="ApplicantAddress" asp-for="ApplicantAddress" placeholder="Enter here ...">
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantCitizenshipNum">Applicant's Citizenship Number:</label>
            <input type="text" class="form-control" id="ApplicantCitizenshipNum" asp-for="ApplicantCitizenshipNum" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="GrandFathersName">Grandfather's Name:</label>
            <input type="text" class="form-control" id="GrandFathersName" asp-for="GrandFathersName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="FathersName">Father's Name:</label>
            <input type="text" class="form-control" id="FathersName" asp-for="FathersName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="MothersName">Mother's Name:</label>
            <input type="text" class="form-control" id="MothersName" asp-for="MothersName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="DateOfBirth">Date of Birth:</label>
            <input type="date" class="form-control" id="DateOfBirth" asp-for="DateOfBirth" placeholder="Enter here ..." required>
        </div>

