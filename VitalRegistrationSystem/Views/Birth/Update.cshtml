        <div class="form-group my-4 col-6">
            <label for="ChildAddress">Child's Address:</label>
            <input type="text" class="form-control" id="ChildAddress" asp-for="ChildAddress" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="FatherCitizenshipNumber">Father's Citizenship Number:</label>
            <input type="text" class="form-control" id="FatherCitizenshipNumber" asp-for="FatherCitizenshipNumber" placeholder="Enter here ...">
        </div>

        <div class="form-group my-4 col-6">
            <label for="MotherCitizenshipNumber">Mother's Citizenship Number:</label>
            <input type="text" class="form-control" id="MotherCitizenshipNumber" asp-for="MotherCitizenshipNumber" placeholder="Enter here ...">
        </div>
