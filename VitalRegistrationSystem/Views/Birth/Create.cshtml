@model VitalRegistrationSystem.Models.BirthModel

<div class="text-banner">
    <h1 class="text-center">Birth Registration</h1>
</div>

<form asp-controller="Birth" asp-action="CreateBirth" method="post" enctype="multipart/form-data" class="container px-4 py-4">
    <div class="row">
        <div class="form-group my-4 col-6">
            <label for="ApplicantName">Applicant's Name:</label>
            <input type="text" class="form-control" id="ApplicantName" name="ApplicantName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantAddress">Applicant's Address:</label>
            <input type="text" class="form-control" id="ApplicantAddress" name="ApplicantAddress" placeholder="Enter here ...">
        </div>

        <div class="form-group my-4 col-6">
            <label for="ApplicantCitizenshipNum">Applicant's Citizenship Number:</label>
            <input type="text" class="form-control" id="ApplicantCitizenshipNum" name="ApplicantCitizenshipNum" placeholder="Enter here ..."  required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="GrandFathersName">Grandfather's Name:</label>
            <input type="text" class="form-control" id="GrandFathersName" name="GrandFathersName" placeholder="Enter here ..."  required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="FathersName">Father's Name:</label>
            <input type="text" class="form-control" id="FathersName" name="FathersName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="MothersName">Mother's Name:</label>
            <input type="text" class="form-control" id="MothersName" name="MothersName" placeholder="Enter here ..." required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="DateOfBirth">Date of Birth:</label>
            <input type="date" class="form-control" id="DateOfBirth" name="DateOfBirth" placeholder="Enter here ..."  required>
        </div>

        @*<div class="form-group my-4">
            <label for="HospitalVerification">Hospital Verification Document:</label>
            <input type="file" class="form-control-file" id="HospitalVerification" name="HospitalVerification">
        </div>*@

        <div class="form-group my-4 col-6">
            <label for="ChildName">Child's Name:</label>
            <input type="text" class="form-control" id="ChildName" name="ChildName" placeholder="Enter here ..."  required>
        </div>

        @*  <div class="form-group my-4">
        <label for="Gender">Gender:</label>
        <select class="form-control" id="Gender" name="Gender" required>
        <option value="">Select Gender</option>
        <option value="Male" @(Model.Gender == Gender.Male ? "selected" : "")>Male</option>
        <option value="Female" @(Model.Gender == Gender.Female ? "selected" : "")>Female</option>
        <option value="Other" @(Model.Gender == Gender.Other ? "selected" : "")>Other</option>
        </select>
        </div>*@

        <div class="form-group my-4 col-6">
            <label for="ChildAddress">Child's Address:</label>
            <input type="text" class="form-control" id="ChildAddress" name="ChildAddress" placeholder="Enter here ..."  required>
        </div>

        <div class="form-group my-4 col-6">
            <label for="FatherCitizenshipNumber">Father's Citizenship Number:</label>
            <input type="text" class="form-control" id="FatherCitizenshipNumber" name="FatherCitizenshipNumber" placeholder="Enter here ...">
        </div>

        <div class="form-group my-4 col-6">
            <label for="MotherCitizenshipNumber">Mother's Citizenship Number:</label>
            <input type="text" class="form-control" id="MotherCitizenshipNumber" name="MotherCitizenshipNumber" placeholder="Enter here ...">
        </div>
    </div>


    <button type="submit" class="btn btn-primary">Register</button>
</form>
